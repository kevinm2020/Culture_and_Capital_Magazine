---
// Import Layout if needed
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <!-- Main Grid Container -->
  <main class="p-6">
    <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-4 gap-6">
      
      <!-- Main Article (spanning 2 columns on medium and large screens) -->
      <div class="col-span-1 md:col-span-2 bg-white p-4 shadow-lg rounded">
        <h2 class="text-3xl font-bold">Main Article</h2>
        <p>Here is the main article content...</p>
      </div>

      <!-- Music Section -->
      <div class="bg-white p-4 shadow-lg rounded">
        <h3 class="text-2xl font-semibold">Music</h3>
        <p>Trending music articles...</p>
      </div>

      <!-- Film Section -->
      <div class="bg-white p-4 shadow-lg rounded">
        <h3 class="text-2xl font-semibold">Film/TV</h3>
        <p>Trending film and TV content...</p>
      </div>

      <!-- Fashion Section -->
      <div class="bg-white p-4 shadow-lg rounded">
        <h3 class="text-2xl font-semibold">Fashion</h3>
        <p>Trending fashion content...</p>
      </div>

      <!-- Celebrities Section -->
      <div class="bg-white p-4 shadow-lg rounded">
        <h3 class="text-2xl font-semibold">Celebrities</h3>
        <p>Trending celebrity content...</p>
      </div>

      <!-- Politics Section -->
      <div class="bg-white p-4 shadow-lg rounded">
        <h3 class="text-2xl font-semibold">Politics</h3>
        <p>Trending politics content...</p>
      </div>
    </div>
  </main>
</Layout>



