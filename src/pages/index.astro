---
import Layout from '../layouts/Layout.astro';
import ArticleCard from '../components/ArticleCard.astro';
---

<Layout title="Culture and Capital">

  <!-- Editor's Pick -->
  <section class="mb-10">
    <h1 class="text-4xl font-bold mb-4">Editor's Pick Week of May 12-May 18th</h1>
    <div class="relative bg-white rounded shadow overflow-hidden">
      <!--Editor's Pick Image -->
      <img src="/images/test_picture.jpg" alt="Editor's Pick" class="w-full h-96 object-cover" />
      <div class="p-6">
        <!--Editors Pick Title and Bio and Article Link -->
        <h2 class="text-2xl font-bold mb-2">Article Title</h2>
        <p class="mb-4">Article Bio</p>
        <a href="/editor-pick" class="text-blue-600 font-semibold">Read more â†’</a>
      </div>
    </div>
  </section>

  <!-- 5-Section Grid -->
  <section class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <!--Sections Article Cards -->
    <ArticleCard section="Music" title="Test title" bio="test bio" image="/images/test_picture.jpg" link="/music" />
    <ArticleCard section="Film/TV" title="Test title" bio="test bio" image="/images/test_picture.jpg" link="/film-tv" />
    <ArticleCard section="Fashion" title="Test title" bio="test bio" image="/images/test_picture.jpg" link="/fashion" />
    <ArticleCard section="Opinion" title="Test title" bio="test bio" image="/images/test_picture.jpg" link="/opinion" />
    <ArticleCard section="Politics" title="Test title" bio="test bio" image="/images/test_picture.jpg" link="/politics" />
  </section>
</Layout>


