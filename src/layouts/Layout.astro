---
// src/layouts/Layout.astro
const { children } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Culture and Capital</title>
  <!-- Tailwind CSS and global styles -->
  <link rel="stylesheet" href="/styles/global.css" />
</head>
<body class="bg-white text-black">

  <!-- Header -->
  <header class="bg-black text-white p-4">
    <nav>
      <ul class="flex space-x-4">
        <li><a href="/" class="hover:underline">Home</a></li>
        <li><a href="/music" class="hover:underline">Music</a></li>
        <li><a href="/film" class="hover:underline">Film</a></li>
        <li><a href="/fashion" class="hover:underline">Fashion</a></li>
        <li><a href="/celebrities" class="hover:underline">Celebrities</a></li>
        <li><a href="/politics" class="hover:underline">Politics</a></li>
      </ul>
    </nav>
  </header>

  <!-- Main content area -->
  <main class="max-w-6xl mx-auto px-4 py-10">
    {children}
  </main>

  <!-- Footer -->
  <footer class="bg-black text-white p-4 mt-10">
    <p>&copy; 2025 Culture and Capital. All rights reserved.</p>
  </footer>

</body>
</html>

